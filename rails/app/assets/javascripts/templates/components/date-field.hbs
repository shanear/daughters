<div class="form-group">
  {{view Ember.Select
    class="form-control date-field selected-month"
    content=months
    optionValuePath="content.id"
    optionLabelPath="content.name"
    value=selectedMonth
    prompt="Month"}}

  {{view Ember.Select
    class="form-control date-field selected-day"
    content=days
    selection=selectedDay
    prompt="Day"}}

  {{view Ember.Select
    class="form-control date-field selected-year"
    content=years
    selection=selectedYear
    prompt="Year"}}
</div>
