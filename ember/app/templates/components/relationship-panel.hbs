{{partial "partials/confirmation"}}

<div class="relationship">
  <div class="summary">
    <div class="left">
      {{#link-to 'person.edit' relationship.person }}
        <div class="name">
          {{relationship.person.name}}
        </div>
      {{/link-to}}

      <div class="type">{{relationship.person.role}}</div>
    </div>

    <div class="right">
      {{{linkify-emails relationship.person.contactInfo}}}

      {{#if apiConnection.online}}
        <div class="options">
          <button class="btn btn-link delete-relationship" {{action "deleteRelationship"}}>
            <i class="icon-trash"></i>
            Remove
          </button>
        </div>
      {{/if}}
    </div>
  </div>

  <div class="body">
    <div class="notes">
      {{break-lines relationship.person.notes}}
    </div>
  </div>
</div>