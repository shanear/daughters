<h2>Add Client</h2>

<form class="contact-form">
  {{partial "contact/form"}}

  <div class="cancel">
    {{#link-to 'contacts'}}
      cancel
    {{/link-to}}
  </div>

  {{#if isSaving}}
    <div class="spin-button">
      <i class="icon-loading animate-spin"></i>
    </div>
  {{else}}
    <button id="save-client" class="btn btn-default" {{action "createContact"}}>
      Save Client
    </button>
  {{/if}}
</form>