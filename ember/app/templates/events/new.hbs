<div class="event-action">
  <form id="event-form">
    <h2>Add Event</h2>

    {{partial "event/form"}}

    {{#if isSaving}}
      <div class="spin-button">
        <i class="icon-loading animate-spin"></i>
      </div>
    {{else}}
      <div class="cancel">
        {{#link-to 'events' 'all' 'upcoming'}}
          cancel
        {{/link-to}}
      </div>

      <button id="save-event"
              class="btn btn-default"
              {{action "createEvent"}}
              {{bind-attr disabled="saveDisabled"}}>
        Create Event
      </button>
    {{/if}}
  </form>
</div>
