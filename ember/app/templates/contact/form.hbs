<div class="form-group">
  <label for="name">name:</label>
  {{input type="text" id="name" class="form-control" value=name}}
</div>

{{#toggled-feature name='addedOn'}}
  <div class="form-group">
    <label for="added-on">added on:</label>
    {{!date-field id="added-on" date=addedAt}}
  </div>
{{/toggled-feature}}

{{#if allUsers}}
  <div class="form-group" id='contact-user'>
    <label for="owner">field op: </label>
    {{view "select"
        id="field-op"
        class="form-control"
        content=allUsers
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selectionBinding="user"
        prompt="None"}}
  </div>
{{/if}}

<div class="form-group">
  <label for="city">from city:</label>
  {{input type="text" id="city" class="form-control" value=city}}
</div>

<div class="form-group">
  <label for="birthday">birthday:</label>
  {{!date-field id="birthday" date=birthday requireYear=false}}
</div>

<div class="form-group">
  <label for="phone">phone:</label>
  {{input type="phone" id="phone" class="form-control" value=phone}}
</div>

<div class="form-group">
  <label for="bio">bio:</label>
  {{textarea id="bio" class="form-control" value=bio rows="10"}}
</div>

{{#if errors.length}}
  <ul class="errors">
    {{#each errors}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
