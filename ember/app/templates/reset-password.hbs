<div id="content">
  <div class="logo">
    <h1>Grezha</h1>
  </div>

  <div id="account-box">
    <h3>Reset Password</h3>

    <form {{action 'submit' on='submit'}}>
      {{#unless session.isAuthenticated}}
        <div class="form-group">
          {{input type="text"
                  class="email form-control"
                  placeholder="Email address"
                  value=email}}
        </div>
      {{/unless}}

      <div class="form-group">
        {{input type="password"
                class="new-password form-control"
                placeholder="New password"
                value=newPassword}}
      </div>

      <div class="form-group">
        {{input type="password"
                class="new-password-confirm form-control"
                placeholder="Re-type new passsword"
                value=newPasswordConfirm}}
      </div>

      <input type="submit"
         id="reset-password-submit"
         class="btn btn-default"
         value="Submit">

      {{#link-to "login"
          class="alternate-link btn btn-link"}}
        Cancel
      {{/link-to}}
    </form>
  </div>

  {{#if errors}}
    <div id="errors" class="alert login">
      {{errors}}
    </div>
  {{/if}}
</div>