<div id="content">
  <div class="logo">
    <h1>Grezha</h1>
  </div>

   <div id="account-box">
    <h3>Login</h3>
    <form {{action "login" on="submit"}}>
      <div class="form-group">
        {{input type="text"
                id="email"
                value=email
                placeholder="Email"
                class="form-control"}}
      </div>

      <div class="form-group">
        {{input type="password"
                id="password"
                value=password
                placeholder="Password"
                class="form-control"}}
      </div>

      <input type="submit"
             id="login-submit"
             class="btn btn-default"
             value="Sign in">

      {{#link-to 'forgot-password'
          class="alternate-link btn btn-link"}}
        Forgot Password?
      {{/link-to}}
    </form>
  </div>

  {{#if notice}}
    <div id="notice" class="notice login">
      {{notice}}
    </div>
  {{/if}}

  {{#if loginErrors}}
    <div id="login-errors" class="alert login">
      {{loginErrors}}
    </div>
  {{/if}}
</div>