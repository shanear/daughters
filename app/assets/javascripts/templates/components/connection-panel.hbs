{{partial "partials/confirmation"}}

<div class="connection clearfix">
  <div class="date">
    <div class="day">{{formatShortDate connection.occurredAt}}</div>
    <div class="year">{{formatYear connection.occurredAt}}</div>
  </div>
  <div class="note">{{breaklines connection.note}}</div>

  {{#control-group name="options"}}
    <a href {{action "deleteConnection"}}>
      <i class="fa fa-trash-o"></i>
      Delete
    </a>
  {{/control-group}}
</div>
