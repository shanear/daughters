<h2>Add Client</h2>

<form class="contact-form">
  {{partial "contact/form"}}

  {{#if isLoading}}
    <div class="spin-button">
      <i class="icon-loading animate-spin"></i>
    </div>
  {{else}}
    <div class="cancel">
      {{#link-to 'contacts'}}
        cancel
      {{/link-to}}
    </div>

    <button id="save-contact" class="btn btn-default" {{action "createContact"}}>
      Save Client
    </button>
  {{/if}}
</form>