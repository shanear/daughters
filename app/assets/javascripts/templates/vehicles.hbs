<div id="sidebar">
  <div class="controls">
    <div class="searchbar">
        <i class="icon-search"></i>
        {{input type="text" value=filterQuery}}
        {{searchFilter}}
    </div>

    <div class="new-vehicle">
      {{#link-to 'vehicles.new'}}
        Add Vehicle
      {{/link-to}}
    </div>
  </div>

  <ul class="vehicles">
    {{#each filteredCollection}}
      <li class="contact">
        {{#link-to 'vehicle' this}}
          {{licensePlate}}
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>

<div id="main-panel">
  {{outlet}}
</div>