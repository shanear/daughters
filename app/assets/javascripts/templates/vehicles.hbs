<div id="sidebar">
  <div class="controls">
    <div class="searchbar">
        <i class="fa fa-search"></i>
        {{input type="text" class="form-control" value=filterQuery}}
        {{searchFilter}}
    </div>

    <div class="new-vehicle">
      {{#link-to 'vehicles.new'}}
        Add Vehicle
      {{/link-to}}
    </div>
  </div>

  <div class="searchlist">
    <ul class="vehicles">
      {{#each filteredCollection}}
        <li class="contact">
          {{#link-to 'vehicle' this}}
            {{licensePlate}}
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<div id="main-panel">
  {{outlet}}
</div>