<div class="form-group">
  <label for="name">name:</label>
  {{input type="text" id="name" class="form-control" value=name}}
</div>

{{#feature 'memberId'}}
  <div class="form-group">
    <label for="member-id">member id:</label>
    {{input type="text" id="member-id" class="form-control" value=memberId}}
  </div>
{{/feature}}

<div class="form-group">
  <label for="city">from city:</label>
  {{input type="text" id="city" class="form-control" value=city}}
</div>

<div class="form-group">
  <label for="birthday">birthday:</label>
  {{date-field id="birthday" date=birthday}}
</div>

<div class="form-group">

  <div class="phone-header">
    <label for="phone">phone:</label>
    <span class="phone-help-icon">
      <i class="fa fa-question"></i>
      <text>format: xxx-xxx-xxxx:ext </text>
    </span>
  </div>
  {{input type="phone" id="phone" class="form-control" value=phone}}

</div>

<div class="form-group">
  <label for="bio">bio:</label>
  {{textarea id="bio" class="form-control" value=bio rows="10"}}
</div>

{{#if allUsers}}
  <div class="form-group" id='contact-user'>
    <label for="owner"> Owner: </label>
    {{view Ember.Select class="form-control owner" content=allUsers optionValuePath="content.id" optionLabelPath="content.name" selectionBinding="user" }}
  </div>
{{/if}}
{{#if errors.length}}
  <ul class="errors">
    {{#each errors}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
