<form class="contact-form">
  <div class="form-group">
    <label for="name">Name:</label>
    {{input type="text" id="name" class="form-control" value=name}}
  </div>

  <div class="form-group">
    <label for="city">From City:</label>
    {{input type="text" id="city" class="form-control" value=city}}
  </div>

  <div class="form-group">
    <label for="birthday">Birthday:</label>
    {{date-field id="birthday" date=birthday}}
  </div>

  <div class="form-group">
    <label for="bio">Bio:</label>
    {{textarea id="bio" class="form-control" value=bio}}
  </div>

  <br/>
  <button class="btn btn-default" {{action "createContact"}}>
    Save Contact
  </button>
</form>