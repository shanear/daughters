<div class="contact-panel">
  <div class="control-bar clearfix">
    <div class="status">
      {{#unless isRemoteSynced}}
        Unsynced
      {{/unless}}
    </div>
    {{#control-group name="options"}}
      {{#link-to 'contact.edit' model id='edit-contact'}}
        <i class="fa fa-pencil"></i>
        Edit
      {{/link-to}}
      <a href {{action "deleteContact"}}>
        <i class="fa fa-trash-o delete-contact"></i>
        Delete
      </a>
    {{/control-group}}
  </div>

  {{partial "partials/confirmation"}}

  <div class="clearfix">
    <!-- TODO: add the picture field to as a custom feature
      <div class="avatar clearfix">
        <img {{bind-attr src=pictureUrl}}></img>
        {{image-uploader resource="contacts" resourceId=id action="changeImage"}}
      </div>
    -->

      <div class="top-info">
        <h3 id="contact-name">{{name}}</h3>

        {{#feature 'memberId'}}
          <div class="contact-id">
            {{#if memberId}}
              member id: {{memberId}}
            {{else}}
              <span class="warning">missing member id</span>
            {{/if}}
          </div>
        {{/feature}}

        <div class="attributes">
          <p>
            <span class="field-label">from</span>
            {{#if city}}
              {{city}}
            {{else}}
              unknown
            {{/if}}
          </p>

          <p id="user">
            <span class="field-label"> volunteer </span>
              {{user.name}}
          </p>

          <p>
            <span class="field-label">birthday</span>
            {{#if birthday}}
              {{formatBirthday birthday}}
            {{else}}
              unknown
            {{/if}}
          </p>

          <p id="last-seen">
            <span class="field-label">last seen</span>
            {{#if lastSeen}}
              {{formatDate lastSeen}}
            {{/if}}
          </p>

          <p>
            {{#if phone}}
            <span class="field-label">phone</span>
              {{phone}}
            {{/if}}
          </p>
        </div>
    </div>
  </div>

  {{#if bio}}
    <div class="bio">
      {{breaklines bio}}
    </div>
  {{/if}}

  <div id="relationships">
    <div class="section-header">
      <div class="right">
        {{#if addingRelationship}}
          <button class="btn btn-link" {{action "cancelNewRelationship"}}>
            Cancel
          </button>
        {{else}}
          <button id="add-relationship" class="btn btn-default" {{action "newRelationship"}}>
            Add Relationship
          </button>
        {{/if}}
      </div>

      <div class="left">
        <h4>Relationships</h4>
      </div>
    </div>

    {{#if addingRelationship}}
      <div class="form-horizontal add-model-form">
        {{#if newPerson.errors.length}}
          <ul class="errors">
            {{#each newPerson.errors}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        {{/if}}

        <div class="form-group">
          <label for="newRelationshipName" class="col-sm-3 control-label">name</label>

          <div class="col-sm-9">
            {{autocomplete-field
                inputId="new-relationship-name"
                inputClass="form-control"
                value=newRelationshipName
                suggestions=allPeople
                queryProperty="name"
                subtextProperty="role"
                pinnedSuggestion="+ New Person"
                onSelect="selectPerson"}}
          </div>
        </div>
        {{#if newPerson}}
          <div class="form-group">
            <label for="new-person-role" class="col-sm-3 control-label">role</label>

            <div class="col-sm-9">
              {{input type="text"
                  id="new-person-role"
                  class="form-control"
                  valueBinding="newPerson.role"
                  placeholder="father, social worker, etc."}}
            </div>
          </div>

          <div class="form-group">
            <label for="new-person-contact-info" class="col-sm-3 control-label">contact info</label>

            <div class="col-sm-9">
              {{textarea id="new-person-contact-info"
                class="form-control"
                valueBinding="newPerson.contactInfo"
                placeholder="phone number, email, etc."}}
            </div>
          </div>

          <div class="form-group">
            <label for="new-person-notes" class="col-sm-3 control-label">notes</label>

            <div class="col-sm-9">
              {{textarea id="new-person-notes"
                class="form-control"
                placeholder="Any additional notes about this person?"
                valueBinding="newPerson.notes"}}
            </div>
          </div>

          <div class="save-button">
            <button id="save-relationship" class="btn btn-default " {{action "saveRelationship"}}>
              Save
            </button>
          </div>
        {{/if}}
      </div>
    {{/if}}

    {{#each relationships}}
      {{relationship-panel relationship=this}}
    {{else}}
       <p> There are no relationships for this person. </p>
    {{/each}}
  </div>

  {{connection-new contact=model store=store}}
</div>

