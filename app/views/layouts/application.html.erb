<!DOCTYPE html>
<html <%= manifest_tag %> >
<head>
  <title>Grezha</title>
  <link href='http://fonts.googleapis.com/css?family=Redressed' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script>
    // Run the Javascript associated with this page
    jQuery(function() {
      window.App = new (Daughters["<%= params[:controller].titlecase %>"] || Daughters.Base)
        (<%= @bootstrap_data %>);

      if (typeof App["<%= params[:action] %>"] === 'function') {
        return App["<%= params[:action] %>"].call();
      }
    });
  </script>
</head>
<body>

<header class="clearfix">
  <h1>
    <%= link_to "Grezha", app_path, :class => "title" %>
  </h1>

  <nav>
    <ul>
      <li>
        <%= link_to "Contacts", app_path %>
      </li>
      <li>
        <%= link_to "Birthdays", birthdays_contacts_path %>
      </li>
    </ul>
  </nav>

  <div class="login-info">
    <% if logged_in? %>
      <%= current_user.name %> - <%= link_to "Logout", logout_path, method: "delete" %>
    <% else %>
      Not Logged In
    <% end %>
  </div>
</header>

<div id="flash">
  <% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
