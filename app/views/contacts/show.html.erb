<div class="contact-profile">
  <div class="options">
    <span class="option">
      <%= link_to 'Edit', edit_contact_path(@contact) %>
    </span>
    <span class="option">
      <%= link_to_function "Delete", "$('div.confirm-delete').show()" %>
    </span>
    <span class="option">
      <%= link_to 'Back', contacts_path %>
    </span>
  </div>

  <div class="confirm-delete">
    Are you sure you want to delete this contact?
    <span class="option">
      <%= link_to 'Yes', contact_path(@contact), :method => "delete" %>
    </span>
    <span class="option">
      <%= link_to_function "No", "$('div.confirm-delete').hide()" %>
    </span>
  </div>

  <div class="picture">
    <%= contact_picture_tag(@contact) %>
  </div>

  <div class="basic-info">
    <h1><%= format_name(@contact) %></h1>
    <p><b>From:</b> <%= @contact.city || "Unknown" %></p>
    <p><b>Birthday:</b> <%= format_birthday(@contact) %></p>
    <% if @contact.last_seen %>
      <p><b>Last Seen:</b> <%= @contact.last_seen.to_formatted_s(:long) %></p>
    <% end %>
    <%= format_long_text(@contact.bio) %>
  </div>
</div>


