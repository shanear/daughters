<script>
  // If logged out, clear any cached app data
  // TODO: store localforage configuration in one place. Currently it's also in SyncAdapter.
  localforage.config({
    name        : 'grezha',
    version     : 1.0,
    storeName   : 'sync',
    description : 'locally cached data for Grezha'
  });

  localforage.clear();
</script>

<div id="content">
  <div class="logo">
    <h1> <%= link_to "Grezha", root_path %> </h1>
  </div>

   <div id="account-box">
    <h3>Login</h3>
     <%= form_for(:session, url: sessions_path, class: "form-horizontal") do |f| %>

      <div class="form-group">
        <%= f.text_field :email, value: (params[:session] && params[:session][:email]), placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <%= f.submit "Sign in", class: "btn btn-default" %>
      <%= link_to "Forgot Password?", "/forgot-password", class: "alternate-link btn btn-link" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
     <div class="alert login"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice] %>
     <div class="notice login"><%= flash[:notice] %></div>
  <% end %>
</div>