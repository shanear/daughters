<%= content_for(:title) do %>Grezha Admin<% end %>

<div id="content">
  <div class="logo">
    <h1> <%= link_to "Grezha", root_path %> </h1>
  </div>

   <div id="account-box">
    <h3>Admin Login</h3>
     <%= form_for(:session, url: "#{sessions_path}?admin=true", class: "form-horizontal") do |f| %>

      <div class="form-group">
        <%= f.text_field :email, value: (params[:session] && params[:session][:email]), placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <%= f.submit "Sign in", class: "btn btn-default" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
     <div class="alert login"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice] %>
     <div class="notice login"><%= flash[:notice] %></div>
  <% end %>
</div>