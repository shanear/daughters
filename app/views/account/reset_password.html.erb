<div id="content">
  <div class="logo">
    <h1> <%= link_to "Grezha", root_path %> </h1>
  </div>

   <div id="account-box">
    <h3>Reset Password</h3>
     <%= form_for(@user, url: "/reset-password", class: "form-horizontal") do |f| %>

     <input type="hidden" name="token" value="<%= @user.reset_password_token %>"/>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Re-type Password" %>
      </div>

      <%= f.submit "Reset Password", class: "btn btn-default" %>

      <%= link_to "Cancel", root_path, class: "alternate-link btn btn-link" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
     <div class="alert login"><%= flash[:alert] %></div>
  <% end %>
</div>