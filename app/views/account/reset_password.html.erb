<script>
  // If logged out, clear any cached app data
  // TODO: store localforage configuration in one place. Currently it's also in SyncAdapter.
  localforage.config({
    name        : 'grezha',
    version     : 1.0,
    storeName   : 'sync',
    description : 'locally cached data for Grezha'
  });

  localforage.clear();
</script>

<div id="content">
  <div class="logo">
    <h1> <%= link_to "Grezha", root_path %> </h1>
  </div>

   <div id="account-box">
    <h3>Reset Password</h3>
     <%= form_for(current_user, url: "/reset-password", class: "form-horizontal") do |f| %>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Re-type Password" %>
      </div>

      <%= f.submit "Reset Password", class: "btn btn-default" %>

      <%= link_to "Cancel", root_path, class: "cancel-link btn btn-link" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
     <div class="alert login"><%= flash[:alert] %></div>
  <% end %>
</div>